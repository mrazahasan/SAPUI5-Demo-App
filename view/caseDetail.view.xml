	</ObjectHeader>
    </content>
    <footer>
        <Toolbar>
            <ToolbarSpacer/>
            <Button text="Accept" type="Accept" />
            <Button text="Reject" type="Reject" />
            <Button text="Delete" />
        </Toolbar>
    </footer>
  </Page>
