<mvc:View
  height="100%"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core" 
  controllerName="com.tallymarks.z_fiori_test.view.detail"
  xmlns="sap.m">
  <Page
    title="Tasks"
    class="sapUiContentPadding">
    <subHeader>
			<Toolbar>
				<SearchField
                    placeholder="Search"
					width="100%"
                    id="searchKeyName" 
                    liveChange="onSearchName" />
                <ToolbarSpacer/>				
                <Select id="filterSelect" autoAdjustWidth="true" change="handleFilterChange"  icon="sap-icon://filter"
                        type="IconOnly">
                        <items>
                            <core:Item key="AN" text="Sort Ascending by Name"/>
                            <core:Item key="DN" text="Sort Descending by Name"/>
                            <core:Item key="AS" text="Sort Status 'Active'"/>
                            <core:Item key="DS" text="Sort Status 'Expired'"/>
                        </items>
                    </Select>
                    <Button icon="sap-icon://bar-code" press="onBarCodeScan" ariaLabelledBy="Scanbar Code"/>
			</Toolbar>
		</subHeader>
    <content>
        <ObjectHeader
            
            binding="{/Contracts/0}"
            title="{name}"
            icon="{categoryicon}"
            number="{noOfFields}"            
            numberUnit="Cases">
        </ObjectHeader>       
        <Table id="idProductsTable"
            growing="true"
		    growingThreshold="20"
		    growingScrollToLoad="false"
            inset="false"
            items="{/Contracts/0/fields}">
            <!--<headerToolbar>
                <Toolbar>
                    
                    <ToolbarSpacer/>
                    <SearchField  width="30%" />
                    
                </Toolbar>
            </headerToolbar>-->
            <columns>
                <Column
                    width="12em">
                    <Text text="Name" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true">
                    <Text text="Notice date" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    hAlign="Right">
                    <Text text="Status" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    hAlign="Center">
                    <Text text="Signed date" />
                </Column>
                <Column
                    hAlign="Right">
                    <Text text="Expiry date" />
                </Column>
            </columns>
            <items>
                <ColumnListItem
                type="Navigation"
                press="onListItemPress">
                    <cells>
                        <Text
                            text="{CustomerName}" />
                            <Text
                            text="{noticedate}" />
                            <Text
                            text="{status}" />
                            <Text
                            text="{signeddate}" />
                            <Text
                            text="{expirydate}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
		  <!--<List 
            items="{/Contracts/0/fields}"            
            >
            <items>
            <ObjectListItem
                press="onListItemPress" 
                title="{name}" 
                type="Navigation"
                icon="{image}"
                
                >
                
            </ObjectListItem>
            </items>
        </List>-->
    </content>
    <footer>
        <Toolbar>
            <ToolbarSpacer/>            
            <Button text="Print" press="printPage" />
        </Toolbar>
    </footer>
  </Page>
</mvc:View>